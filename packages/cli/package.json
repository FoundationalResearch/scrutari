{
  "name": "@foundationalresearch/scrutari",
  "version": "0.2.2",
  "description": "Deep market analysis CLI powered by LLMs",
  "type": "module",
  "bin": {
    "scrutari": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist/*.js",
    "skills/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "finance",
    "analysis",
    "llm",
    "cli",
    "research",
    "investment",
    "stocks",
    "sec",
    "edgar",
    "anthropic",
    "claude",
    "openai",
    "gemini",
    "minimax",
    "mcp",
    "pipeline"
  ],
  "author": "Foundational Research",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/foundationalresearch/scrutari"
  },
  "homepage": "https://github.com/foundationalresearch/scrutari#readme",
  "bugs": {
    "url": "https://github.com/foundationalresearch/scrutari/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.45",
    "@ai-sdk/google": "^3.0.30",
    "@ai-sdk/openai": "^3.0.29",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ai": "^6.0.90",
    "chalk": "^5.3.0",
    "docx": "^9.5.3",
    "eventemitter3": "^5.0.0",
    "ink": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.2.0",
    "yaml": "^2.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@scrutari/core": "file:../core",
    "@scrutari/mcp": "file:../mcp",
    "@scrutari/tools": "file:../tools",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.2.0",
    "ink-testing-library": "^4.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  }
